{
	"name": "grobid-trainer",
	"displayName": "grobid-trainer",
	"description": "A small VSCode extension for correcting GROBID training files",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:grobid-trainer.openTrainingFiles",
		"onCommand:grobid-trainer.createTrainingFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "grobid-trainer.createTrainingFiles",
				"title": "Create GROBID training files from PDF documents"
			},
			{
				"command": "grobid-trainer.openTrainingFiles",
				"title": "Select and edit GROBID training files"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/ssh2": "^0.5.46",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"ssh2": "^1.1.0",
		"webdav": "^4.6.0"
	}
}
